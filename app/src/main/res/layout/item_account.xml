<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="@dimen/account_card_top_bottom"
        android:layout_marginBottom="@dimen/account_card_top_bottom"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/account_card_width"
        android:layout_height="@dimen/account_card_height"
        android:background="@drawable/bg_item_account">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="32dp"
            android:text="@string/account_name"
            android:textColor="#2B2B2B"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/name_tv"
            android:layout_below="@id/name_tv"
            android:layout_marginTop="27dp"
            android:text="@string/account_money"
            android:textColor="#2B2B2B"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/key_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/name_tv"
            android:layout_below="@id/money_tv"
            android:layout_marginTop="29dp"
            android:text="ccc"
            android:textColor="#2B2B2B"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="59dp"
            android:layout_height="47dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="36dp"
            android:layout_marginTop="29dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_card" />
    </RelativeLayout>
</FrameLayout>